<div id="form" style="background-image: url('https://res.cloudinary.com/dl4tnpmqr/image/upload/v1675525382/festival-wizard/cdqqeprozbnvusmra06v.jpg'); background-repeat: no-repeat"; class="picture-box">
   
    <h2 style="color: #7843E6"><b>Login</b></h2>
    <form action="/login" method="POST">
    <label for="">
        Email
        <input type="email" name="email" placeholder="example@example.com">
    </label>
    <label for="">
        Password
        <input type="password" name="password" placeholder="**********">
    </label>
    <button type="submit" class="purple-button">Log In</button>
    {{!-- Error message --}}
    {{#if errorMessage}} 
    <p class="error">{{errorMessage}}</p>
    {{/if}}
    </form>
</div>

