{{#if userInfo}}

<h1 style="color: #7843E6;"><b>Welcome {{userInfo.email}}</b></h1>
<p>This is your profile page</p>

{{#if userInfo.isAdmin}}
  <p><b>You are an admin</b></p>
{{/if}}
<br><br>

<h2 style="color: #5183EF"><b>My Favorites</b></h2>

  {{#if festivals}}
    <ul>
      {{#each festivals}}
        <li><h4><a href="/festivals/{{_id}}" style="color: #FC02FE">{{name}}</a></h4></li>
      {{/each}}
    </ul></uk>
  {{else}}
        <h4><b>You haven't added any festivals on your favorites list.</b></h4>
        <h4><b>To add a favorite, go to the <a href="/festivals/list">All Festivals</a> page</b></h4>
        <h4><b>Then select a Festival and press the Add Festival to Favorites button</b></h4>
  {{/if}}
{{else}}
<p>You are not logged in</p>
{{/if}}