<div class="container">

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <h1>New Festival</h1>

                <hr>

                <form action="/festivals/create" method="POST">
                    <label>
                        <b>Name:</b> <input type="text" name="name" value="{{name}}">
                    </label><br><br>

                    <label>
                        <b>Image:</b> <input type="text" name="imageURL" value="{{imageURL}}">
                    </label><br><br>

                    <label>
                        <b>Start Date:</b> <input type="date" name="startDate" value="{{startDate}}">
                    </label>

                    <label>
                        <b>End Date:</b> <input type="date" name="endDate" value="{{endDate}}">
                    </label><br><br>

                    <label>
                        <b>Artists:</b> <input type="text" name="artists" value="{{artists}}">
                    </label><br><br>

                    <label>
                        <b>Country:</b>

                                <select id="country" name="country" value="{{location.country}}">
                                    <option value={{festivalToEdit.location.country}} selected>{{festivalToEdit.location.country}}</option>
                                    {{#each countriesLeft}}
                                        <option value={{this}}> {{this}} </option>
                                    {{/each}}                                    
                                </select>         
                    </label>  <br><br>  

                    <label>
                        <b>City:</b> <input type="text" name="city" value="{{location.city}}">
                    </label><br><br>

                    <label>
                        <b>Address:</b> <input type="text" name="address" value="{{location.address}}">
                    </label><br><br>

                    <label>
                        <b>Currency:</b> <select name="currency" value="{{currency}}">
                            <option value="EUR">EUR</option>
                            <option value="USD">USD</option>
                            <option value="GBP">GBP</option>
                            </select>
                    </label><br><br>

                    <label>
                        <b>Min Price:</b> <input type="number" name="minPrice" value="{{minPrice}}">
                    </label>

                    <label>
                        <b>Max Price:</b> <input type="number" name="maxPrice" value="{{maxPrice}}">
                    </label><br><br>

                    <label>
                        <b>Website:</b> <input type="text" name="website" value="{{website}}">
                    </label><br><br>

                    <label>
                        <b>Key fact:</b> <input type="text" name="mustKnow" value="{{mustKnow}}">
                    </label><br><br>

                    <label>
                        <b>Genre:</b> <select name="genre" value="{{genre}}" multiple>
                            <option value="Rock">Rock</option>
                            <option value="Pop">Pop</option>
                            <option value="Electronic">Electronic</option>
                            <option value="Folk">Folk</option>
                            <option value="Techno">Techno</option>
                            <option value="Classical">Classical</option>
                            </select>
                    </label><br><br>

                                       

                    <input type="submit" value="Create Festival" class="btn-dark btn"><br><br>

                    {{#if errorMessage}}
                      <p class={{errorType}}>{{errorMessage}}</p>
                    {{/if}}
                </form>

            </div>
        </div>
    </div>

</div>